<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:padding="16dp">
<ImageView
    android:id="@+id/img_upload"
    android:layout_width="60dp"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginLeft="10dp"
    app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/upload_button_anh"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Chọn ảnh"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_btndk"
        app:backgroundTint="@null"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginRight="60dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_linkBH"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:maxLines="2"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_button_anh"/>
    <Button
        android:id="@+id/upload_button"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Chọn nhạc"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btndk"
        app:backgroundTint="@null"
        android:textSize="16dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        app:layout_constraintTop_toBottomOf="@+id/upload_button_anh" />
    <EditText
        android:id="@+id/txt_upload_tenBH"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="10sp"
        android:hint="Nhập tên bài hát..."
        android:textColorHint="#838383"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/custom_txtdn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_button"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:max="100"
        android:progress="0"
        android:visibility="gone"
        android:progressTint="#00DB0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_upload_tenBH"
        tools:visibility="visible" />
    <EditText
        android:id="@+id/txt_upload_ns"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="10sp"
        android:hint="Tìm kiếm nghệ sĩ..."
        android:textColorHint="#838383"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:textColor="@color/white"
        android:background="@drawable/custom_txtdn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_upload_ns"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="200dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_upload_ns"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_upload_tenns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rcv_upload_ns"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_btndk"
        app:backgroundTint="@null"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_upload_tenns"/>



</androidx.constraintlayout.widget.ConstraintLayout>