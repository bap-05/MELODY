<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/item_music"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_marginBottom="5sp"
    android:layout_marginTop="5sp"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/poster"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/bigteam">
    </ImageView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_tenBaiHat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BigTeam all star "
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1">
        </TextView>
        <TextView
            android:id="@+id/txt_tacgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BigDaddy,7DNight,DANGRANGTO, HURRYKNG"
            android:textSize="12sp"
            android:layout_marginLeft="5sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#8C8B8B">
        </TextView>

    </LinearLayout>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:src="@drawable/more"/>

    </LinearLayout>

</LinearLayout>