<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_view_music"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/custom_minimusic"
    android:layout_height="60dp"
    >
    <ImageView
        android:id="@+id/img_view_music_anh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/vm_baiHat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BigTeam all stars"
            android:textColor="@color/white"
            android:textSize="18sp"

            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>
        <TextView
            android:id="@+id/vm_tentacgia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BigDaddy, 7Dnight, DANGRANGTO, HURRYKNG, VCC Left Hand, $A Livan"
            android:textColor="#EDEAEA"
            android:textSize="15sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/vm_them"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:src="@drawable/plus1"
      />
    <ImageView
        android:id="@+id/vm_stop"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/stop"
       />


</LinearLayout>